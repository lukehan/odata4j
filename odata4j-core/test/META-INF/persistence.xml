<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="NorthwindService" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.odata4j.producer.jpa.model.Suppliers</class>
    <class>org.odata4j.producer.jpa.model.Order_Details</class>
    <class>org.odata4j.producer.jpa.model.Categories</class>
    <class>org.odata4j.producer.jpa.model.Customers</class>
    <class>org.odata4j.producer.jpa.model.Products</class>
    <class>org.odata4j.producer.jpa.model.Employees</class>
    <class>org.odata4j.producer.jpa.model.Orders</class>
    <properties>
      <property name="eclipselink.target-database" value="HSQL"/>
      <property name="eclipselink.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:hsqldb:mem:northwind;shutdown=true;ifxeists=true"/>
      <property name="eclipselink.jdbc.user" value="sa"/>
      <property name="eclipselink.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level" value="SEVERE"/>
      <property name="eclipselink.logging.exceptions" value="true"/>
    </properties>
  </persistence-unit>
    <persistence-unit name="AirlineService" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.odata4j.producer.jpa.airline.FlightSchedule</class>
    <class>org.odata4j.producer.jpa.airline.Airport</class>
    <class>org.odata4j.producer.jpa.airline.Flight</class>
    <properties>
      <property name="eclipselink.target-database" value="HSQL"/>
      <property name="eclipselink.jdbc.driver" value="org.hsqldb.jdbcDriver"/>
      <property name="eclipselink.jdbc.url" value="jdbc:hsqldb:mem:airline;shutdown=true;ifxeists=true"/>
      <property name="eclipselink.jdbc.user" value="sa"/>
      <property name="eclipselink.jdbc.password" value=""/>
      <property name="eclipselink.ddl-generation" value="create-tables"/>
      <property name="eclipselink.logging.level" value="FINER"/>
      <property name="eclipselink.logging.exceptions" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
